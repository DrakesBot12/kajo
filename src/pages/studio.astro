---
import { Image } from "astro:assets";
import "../styles/global.css";

import Nav from "../components/Nav.astro"
import Footer from "../components/Footer.astro"
import Meta from "../components/Meta.astro";

import MainImg from "../assets/imgs/about/main_img.png";

import Person1 from "../assets/imgs/about/person1.png";
import Person2 from "../assets/imgs/about/person2.png"
import Person3 from "../assets/imgs/about/person3.png"
import Person4 from "../assets/imgs/about/person4.png"
import Person5 from "../assets/imgs/about/person5.png"
import Person6 from "../assets/imgs/about/person6.png"

import Twtr from "../assets/icons/twitter.svg"
import Inst from "../assets/icons/instagram.svg"
import Fsbc from "../assets/icons/facebook.svg"

//awards
import Aw1 from "../assets/imgs/about/awards/1.png"
import Aw2 from "../assets/imgs/about/awards/2.png"
import Aw3 from "../assets/imgs/about/awards/3.png"
import Aw4 from "../assets/imgs/about/awards/4.png"
import Aw5 from "../assets/imgs/about/awards/5.png"
