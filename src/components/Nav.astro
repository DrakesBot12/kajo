---
import { Image } from "astro:assets";
import Logo from "../assets/imgs/main/logo.svg"
---

<nav class:list={['flex items-center justify-between', { 'w-full!': Astro.props.class?.includes('nav-full') }]}>
    {Astro.props.class?.includes('nav-full') && (
        <Image 
            src={Logo} 
            alt="Logo" 
            class="cursor-pointer dark:invert-0 invert transition-all duration-300" 
            onclick="window.location.href='/'"
            loading="lazy" 
        />
    )}
    <ul class='flex gap-8'>
        <li><a href="/projects">Projects</a></li>
        <li><a href="/services">Services</a></li>
        <li><a href="/studio">Studio</a></li>
        <li><a href="/journal">Journal</a></li>
    </ul>
    <button type="button"><a href="/contact">Let's Talk</a></button>
</nav>